<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Bantuan"
    android:orientation="vertical"
    android:background="@drawable/bg_kayu">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1" >

        <!-- frame awal linear -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- start judul kategori -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teks"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:text="Halaman Bantuan"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/teks"/>

            </LinearLayout>
            <!-- end judul kategori -->

            <!-- start menu kategori -->
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_Belanja"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgv_ukiran"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_coklat"
                            android:padding="5dp"
                            android:src="@drawable/ic_shopping_ban" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Panduan\nBelanja" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_Pengiriman"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgv_souvenir"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_coklat"
                            android:padding="5dp"
                            android:src="@drawable/ic_send" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Panduan\nPengiriman" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_Pembayaran"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgv_furin"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_coklat"
                            android:padding="5dp"
                            android:src="@drawable/ic_payment" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Panduan\nPembayaran" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_lacak"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/fureks"
                            android:src="@drawable/ic_lacak"
                            android:background="@drawable/bg_coklat"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:padding="5dp"/>

                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Panduan\nLacak Pengiriman"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <!-- end judul kategori -->
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>