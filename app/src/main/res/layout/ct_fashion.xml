<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".categories.ct_Fashion"
    android:orientation="vertical"
    android:background="@drawable/bg_kayu">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1" >

        <!-- frame awal linear -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- start judul kategori -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teks"
                    android:textSize="@dimen/tulisan"
                    android:text="Fashion"/>

            </LinearLayout>
            <!-- end judul kategori -->

            <!-- start menu kategori -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_kat_1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgv_pakaianW"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:padding="5dp"/>

                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Pakaian Wanita"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_kat_2"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgv_bayi"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:padding="5dp"/>

                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Bayi &#038; Anak-anak"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_kat_3"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgv_pakaianP"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:padding="5dp"/>

                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Pakaian\nPria"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_kat_4"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgv_muslim"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:padding="5dp"/>

                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Muslim\n"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <!-- end judul kategori -->

            <!-- start judul index -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teks"
                    android:textSize="@dimen/tulisan"
                    android:text="Produk Fashion"/>

            </LinearLayout>
            <!-- end judul index -->

            <!-- start isi index -->
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_item_1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="80dp"
                    android:layout_height="200dp"
                    android:layout_margin="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgv_itemDtl"
                            android:layout_width="80dp"
                            android:layout_height="140dp"
                            android:padding="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="Tas Ransel AVTECH ..."
                            android:textColor="@color/teks"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="2dp"
                            android:text="Rp 275.000"
                            android:textColor="@color/teks"
                            android:textSize="10sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                                android:id="@+id/total_star_rating_1"
                                style="@style/Widget.MaterialRatingBar.RatingBar"
                                android:layout_width="50dp"
                                android:layout_height="10dp"
                                android:layout_gravity="left"
                                android:isIndicator="true"
                                android:maxHeight="20dp"
                                android:minHeight="20dp"
                                android:numStars="5"
                                android:stepSize="0.25"
                                app:mrb_progressBackgroundTint="@color/gelap"
                                app:mrb_progressTint="@color/warnaUtama"
                                app:mrb_secondaryProgressTint="@color/warnaUtama" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="10dp"
                                android:src="@drawable/ic_heart" />
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_item_2"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="80dp"
                    android:layout_height="200dp"
                    android:layout_margin="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="140dp"
                            android:padding="5dp"
                            android:contentDescription="@string/konten_dsc"
                            android:src="@drawable/bg_hijau" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="Tas Ransel AVTECH ..."
                            android:textColor="@color/teks"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="2dp"
                            android:text="Rp 275.000"
                            android:textColor="@color/teks"
                            android:textSize="10sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                                android:id="@+id/total_star_rating_2"
                                style="@style/Widget.MaterialRatingBar.RatingBar"
                                android:layout_width="50dp"
                                android:layout_height="10dp"
                                android:layout_gravity="left"
                                android:isIndicator="true"
                                android:maxHeight="20dp"
                                android:minHeight="20dp"
                                android:numStars="5"
                                android:stepSize="0.25"
                                app:mrb_progressBackgroundTint="@color/gelap"
                                app:mrb_progressTint="@color/warnaUtama"
                                app:mrb_secondaryProgressTint="@color/warnaUtama" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="10dp"
                                android:src="@drawable/ic_heart" />
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_item_3"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="80dp"
                    android:layout_height="200dp"
                    android:layout_margin="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="140dp"
                            android:padding="5dp"
                            android:src="@drawable/bg_hijau" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="Tas Ransel AVTECH ..."
                            android:textColor="@color/teks"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="2dp"
                            android:text="Rp 275.000"
                            android:textColor="@color/teks"
                            android:textSize="10sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                                android:id="@+id/total_star_rating_3"
                                style="@style/Widget.MaterialRatingBar.RatingBar"
                                android:layout_width="50dp"
                                android:layout_height="10dp"
                                android:layout_gravity="left"
                                android:isIndicator="true"
                                android:maxHeight="20dp"
                                android:minHeight="20dp"
                                android:numStars="5"
                                android:stepSize="0.25"
                                app:mrb_progressBackgroundTint="@color/gelap"
                                app:mrb_progressTint="@color/warnaUtama"
                                app:mrb_secondaryProgressTint="@color/warnaUtama" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="10dp"
                                android:src="@drawable/ic_heart" />
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_item_4"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="80dp"
                    android:layout_height="200dp"
                    android:layout_margin="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="140dp"
                            android:padding="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="Tas Ransel AVTECH ..."
                            android:textColor="@color/teks"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="2dp"
                            android:text="Rp 275.000"
                            android:textColor="@color/teks"
                            android:textSize="10sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                                android:id="@+id/total_star_rating_4"
                                style="@style/Widget.MaterialRatingBar.RatingBar"
                                android:layout_width="50dp"
                                android:layout_height="10dp"
                                android:layout_gravity="left"
                                android:isIndicator="true"
                                android:maxHeight="20dp"
                                android:minHeight="20dp"
                                android:numStars="5"
                                android:stepSize="0.25"
                                app:mrb_progressBackgroundTint="@color/gelap"
                                app:mrb_progressTint="@color/warnaUtama"
                                app:mrb_secondaryProgressTint="@color/warnaUtama" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="10dp"
                                android:contentDescription="@string/konten_dsc"
                                android:src="@drawable/ic_heart" />
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <!-- end isi index -->

            <!-- start judul index -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teks"
                    android:textSize="@dimen/tulisan"
                    android:text="Produk Pakaian Wanita"/>

            </LinearLayout>
            <!-- end judul index -->

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>