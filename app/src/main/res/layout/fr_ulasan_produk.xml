<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:fillViewport="true"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nm_brg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textColor="@color/teks"
                android:text="@string/nm_barang"
                android:textSize="@dimen/tulisan" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:textSize="@dimen/tulisan"
                    android:textStyle="bold"
                    android:textColor="@color/teks"
                    android:text="@string/desc_rat" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/tulisan"
                    android:textStyle="bold"
                    android:textColor="@color/teks"
                    android:text="Ulasan Pelanggan Untuk Produk\n10 dari 5" />

                <TextView
                    android:id="@+id/tv_nama_pasien_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tulisan"
                    android:layout_marginRight="@dimen/tulisan"
                    android:textColor="@color/teks"
                    android:text="Berdasarkan 1 Peringkat &#038; Ulasan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tulisan"
                    android:layout_marginRight="@dimen/tulisan"
                    android:textStyle="bold"
                    android:textColor="@color/teks"
                    android:text="Gembira 100%" />

                <ProgressBar
                    android:id="@+id/simpleProgressBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tulisan"
                    android:layout_marginRight="@dimen/tulisan"
                    android:layout_marginTop="10dp"
                    android:max="100"
                    android:progress="100"
                    android:progressDrawable="@drawable/custom_progress" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nama_pasien_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tulisan"
                    android:layout_marginRight="@dimen/tulisan"
                    android:textStyle="bold"
                    android:textColor="@color/teks"
                    android:text="Melebihi Ekspektasi 0%" />

                <ProgressBar
                    android:id="@+id/simpleProgressBar_2"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tulisan"
                    android:layout_marginRight="@dimen/tulisan"
                    android:layout_marginTop="10dp"
                    android:max="100"
                    android:progress="10"
                    android:progressDrawable="@drawable/custom_progress" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nama_pasien_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tulisan"
                    android:layout_marginRight="@dimen/tulisan"
                    android:textStyle="bold"
                    android:textColor="@color/teks"
                    android:text="Puas 0%" />

                <ProgressBar
                    android:id="@+id/simpleProgressBar_3"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tulisan"
                    android:layout_marginRight="@dimen/tulisan"
                    android:layout_marginTop="10dp"
                    android:max="100"
                    android:progress="10"
                    android:progressDrawable="@drawable/custom_progress" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nama_pasien_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tulisan"
                    android:layout_marginRight="@dimen/tulisan"
                    android:textStyle="bold"
                    android:textColor="@color/teks"
                    android:text="Dibawah Rata - Rata 0%" />

                <ProgressBar
                    android:id="@+id/simpleProgressBar_4"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tulisan"
                    android:layout_marginRight="@dimen/tulisan"
                    android:layout_marginTop="10dp"
                    android:max="100"
                    android:progress="10"
                    android:progressDrawable="@drawable/custom_progress" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nama_pasien_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tulisan"
                    android:layout_marginRight="@dimen/tulisan"
                    android:textStyle="bold"
                    android:textColor="@color/teks"
                    android:text="Tidak Puas 0%" />

                <ProgressBar
                    android:id="@+id/simpleProgressBar_5"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tulisan"
                    android:layout_marginRight="@dimen/tulisan"
                    android:layout_marginTop="10dp"
                    android:max="100"
                    android:progress="10"
                    android:progressDrawable="@drawable/custom_progress" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nama_pasien_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tulisan"
                    android:layout_marginRight="@dimen/tulisan"
                    android:textStyle="bold"
                    android:textColor="@color/teks"
                    android:text="Ulasan Pelanggan (Total 1)" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tulisan"
                    android:layout_marginRight="@dimen/tulisan"
                    android:text="@string/urutan"
                    android:textColor="@color/teks"/>

                <Spinner
                    android:id="@+id/sp_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tulisan"
                    android:layout_marginRight="@dimen/tulisan"
                    android:entries="@array/urutan"
                    android:padding="10dp"
                    android:textColor="@color/teks"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tulisan"
                android:orientation="horizontal">

                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                    android:id="@+id/total_star_rating_dua"
                    style="@style/Widget.MaterialRatingBar.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:isIndicator="true"
                    android:maxHeight="20dp"
                    android:minHeight="20dp"
                    android:numStars="5"
                    android:rating="4.5"
                    android:stepSize="0.25"
                    app:mrb_progressBackgroundTint="@color/gelap"
                    app:mrb_progressTint="@color/warnaUtamaGelap"
                    app:mrb_secondaryProgressTint="@color/warnaUtama" />


                <TextView
                    android:id="@+id/rate_dua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/teks"
                    android:text="kualitas Bagus" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_desc_review_dua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/teks"
                android:text="Tas ini kualitasnya cukup bagus" />

            <TextView
                android:id="@+id/tv_tgl_rating_dua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/teks"
                android:text="Admin, Thursday, January 24, 2019" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/tulisan" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tulisan"
                android:orientation="horizontal">

                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                    android:id="@+id/total_star_rating"
                    style="@style/Widget.MaterialRatingBar.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:isIndicator="true"
                    android:maxHeight="20dp"
                    android:minHeight="20dp"
                    android:numStars="5"
                    android:rating="4.5"
                    android:stepSize="0.25"
                    app:mrb_progressBackgroundTint="@color/gelap"
                    app:mrb_progressTint="@color/warnaUtamaGelap"
                    app:mrb_secondaryProgressTint="@color/warnaUtama" />


                <TextView
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/teks"
                    android:text="kualitas Bagus" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_desc_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/teks"
                android:text="Tas ini kualitasnya cukup bagus" />

            <TextView
                android:id="@+id/tv_tgl_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/teks"
                android:text="Admin, Thursday, January 24, 2019" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/tulisan" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>